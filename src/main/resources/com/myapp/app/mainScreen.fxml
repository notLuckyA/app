   <children>
      <ToolBar prefHeight="40.0" prefWidth="200.0">
        <items>
          <Button mnemonicParsing="false" onAction="#toLogin" text="Выйти" />
            <Label text="Время сессии: ">
               <padding>
                  <Insets left="200.0" />
               </padding>
            </Label>
            <Label fx:id="timer" text="Label" />
        </items>
      </ToolBar>
      <HBox prefHeight="100.0" prefWidth="200.0">
